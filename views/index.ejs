<!doctype html>
<html lang="en">

<head>
  <title>Assignment 5</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="index.js"></script>
</head>

<body>
  <section style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row h-100">
        <div class="col-12">
          <div class="card rounded-3">
            <div class="card-body p-4">
              <h4 class="text-center my-3 pb-3">To Do App</h4>
              <form id="saveTask" method="post" action="/task">
                <div class="col-12 form-group mb-1">
                  <div class="form-outline">
                    <label class="form-label" for="form1">Enter a task here</label>
                    <input type="text" id="taskInput" class="form-control" name='Description' />
                  </div>
                  <button type="submit" class="btn btn-primary mt-2">Save</button>
                </div>
              </form>

              <table class="table table-bordered mb-4 mt-2">
                <thead>
                  <tr>
                    <th> No. </th>
                    <th> Todo item</th>
                    <th> Status </th>
                    <th> Actions </th>
                  </tr>
                </thead>
                <tbody>
                  <% tasks.forEach(task=> { %>
                    <tr>
                      <th>
                        <%= task._id %>
                          </th>
                      <td>
                        <%= task.Description %>
                      </td>
                      <td>
                        <%= completetionStatus(task) %>
                      </td>
                      <td>
                        <form style="display: inline-block" action="/task/<%= task._id %>?_method=DELETE" method="POST">
                        <button id="Delete" type="submit"
                          class="btn btn-danger delete-button">Delete</button>
                        </form>
                        <form style="display: inline-block" action="/task/toggle/<%= task._id %>?_method=PUT" method="POST">
                          <button type="submit" class="btn btn-success">
                            <%= task.isComplete ? 'InComplete' : 'Complete' %>
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>

</html>
